    transform(n) { 
    -webkit-transform: n
    -moz-transform: n 
    -ms-transform: n
    -o-transform: n
    transform: n
    }
    border-radius(n) {
    -webkit-border-radius: n
    -moz-border-radius: n
    -ms-border-radius: n
    -o-border-radius: n
    border-radius: n
    }
    box-sizing(n) {
     -webkit-box-sizing: n
    -moz-box-sizing: n
    -ms-box-sizing: n
    -o-box-sizing: n
    box-sizing: n
    }

