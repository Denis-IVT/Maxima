.first-nav {
 display: flex;
 justify-content: space-between;
 height: 180px;

    .first-nav__logo { 
    
        line-height: 180px;
        width: 203px;
        a {
            img {
                height: 108px;
                vertical-align: middle;
            }
        }
    }
    .first-nav__navButton {
         position: relative;
         display: flex;
         align-items: center;
         justify-content: center;
         width: 100%;
       ul { 
            display: flex;
            justify-content: flex-end;
            width: 100%;
           li {  
                position: relative;
                &:hover .ball {
                top: -20px;
                background: $color_header_info_first_last;
                }
                
                a {  
                    display: block;
                    font-family: "IntroRegular", serif;
                    text-transform: uppercase; 
                    font-size: 12px;
                    text-align: center;
                    color:#000;
                    transition: all 300ms ease;
                        &:before {
                        position: absolute;
                        top: 58px;
                        left: 50%;
                        width: 50px;
                        height: 9px;
                        margin-left: -25.5px;
                        border-radius(50%);
                        background: linear-gradient(to bottom, #ededed 50%, #e4dfdf 100%);
                        content: "";
                        transition: all 0.2s ease;
                        }
                        &:hover {
                        color:$color_header_info_first_last;
                        }
                         &:after {
                        position: absolute;
                        top: 0;
                        right: 0;
                        bottom: 0;
                        left: 0;
                        content: "";
                        z-index: 110;
                        }
                        &:hover:before {
                        width: 40px;
                        height: 8px;
                        margin-left: -20px;
                        }
                        .ball {
                        position: relative;
                        display: block;
                        top: 0;
                        width: 60px;
                        height: 60px;
                        line-height: 60px;
                        margin: auto;
                        margin-bottom: 20px;
                        border-radius(50%);
                        background:$color_button_icon;
                        text-align: center;
                        transition: all 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
                        z-index: 100;
                        }
                        img {
                        vertical-align: middle;
                        }
                }
           }
            li:hover .ball {
            top: -22px;
            background:$color_bg;
            }
            li+li {
               margin-left: 70px;
            }
           
       }
    }
}
.slider {
    width: 1000px;
    height: 400px;
    overflow: hidden;
    position: relative;
    margin: 0 auto;
    left:-10px;
        .slider__wrapper {
        position: absolute;
        left: 0;
        top: 0;
        height: 400px;
        margin: 0;
        padding: 0;    
        }
            .slide {
            width: 1000px;
            height: 400px;
            float: left;
            list-style: none;
            padding-left:21px;
            position: relative; 
                .slide__item {
                 margin-left: 50px;
                 margin-top:25px;
                font-size: 40px;
                position: absolute;
                height: 202px;
                width: 347px;
                top:21.2%;
                left:-21px;
                z-index:999;
                    .first__text {
                        font-family: "IntroRegularAlt", serif;
                        font-size: 34px;
                    }
                    .second__text {
                        font-family: "OpenSans", serif;
                        font-size: 14px;
                        line-height: 1.5;
                        margin-top: 20px;
                    }
                        a {
                            color:$color_font;
                            span:hover {
                            border-bottom: 2px solid #fff;
                            }
                        }
                    
                        a.prev__slide, a.next__slide {
                            margin-top: 15px;
                            display: inline-block;
                            &:last-child {
                                margin-left:10px;
                            }
                        }
    
                            }

                .slide__text {
                    background-color: rgba(227, 65, 104, 0.98);
                    position: absolute;
                    height: 228px;
                    width: 397px;
                    top:21.2%;
                    left:-21px;
                    z-index:3;
                    span {
                    display: block;
                    margin-left: 20px;
                    position: absolute;
                    font-size: 40px;
                    z-index: 999;
                    }
                }
            }
    }
